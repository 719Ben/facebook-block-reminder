{
  "manifest_version": 2,
  "name": "Facebook Timer",
  "description": "Extention that ask \"How long do you want to be on Facebook for?\"",
  "version": "1.0.0",
  "homepage_url": "https://github.com/719Ben/facebook-timer",
  "browser_action": {
    "default_title": "Facebook Timer"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [{
    "matches": ["*://*.facebook.com/*"],
    "js": ["content.js"],
    "css": ["content.css"]
  }],
  "background": {
    "scripts": ["background.js"]
  }
}
